import turtle

# Set up the turtle screen
screen = turtle.Screen()
screen.bgcolor("black")

# Create a turtle object
pen = turtle.Turtle()
pen.speed(1)
pen.color("white")
pen.penup()
pen.hideturtle()

# Define the message to be displayed
message = "I love shiny things but I'd marry you with paper rings."

# Set the starting position of the turtle
pen.goto(-100, 0)

# Loop through each character in the message
for char in message:
    # Write the character on the screen
    pen.write(char, align="center", font=("Times New Roman", 27, "normal"))
    
    # Move the turtle forward
    pen.forward(20)
    
    # Rotate the turtle
    pen.right(10)

# Exit the turtle graphics window when clicked
turtle.done()

#text overlaps
